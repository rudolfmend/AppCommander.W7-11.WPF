<UserControl x:Class="AppCommander.W7_11.WPF.Controls.UserModeRibbon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="300">

    <UserControl.Resources>
        <!-- Style for mode buttons -->
        <Style x:Key="ModeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Border Background="{DynamicResource PanelBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="6"
            Padding="4">
        <StackPanel Orientation="Horizontal">

            <!-- Accountant Mode -->
            <Button x:Name="BtnAccountant" 
                    Content="🧾" 
                    Click="BtnAccountant_Click"
                    ToolTip="Accountant - Document processing"
                    Style="{StaticResource ModeButtonStyle}"/>

            <!-- Tester Mode -->
            <Button x:Name="BtnTester" 
                    Content="🧪" 
                    Click="BtnTester_Click"
                    ToolTip="Tester - UI testing and recording"
                    Style="{StaticResource ModeButtonStyle}"/>

            <!-- Worker Mode -->
            <Button x:Name="BtnWorker" 
                    Content="📝" 
                    Click="BtnWorker_Click"
                    ToolTip="Office Worker - Playback sequences"
                    Style="{StaticResource ModeButtonStyle}"/>

            <!-- Developer Mode -->
            <Button x:Name="BtnDeveloper" 
                    Content="🛠️" 
                    Click="BtnDeveloper_Click"
                    ToolTip="Developer - All features"
                    Style="{StaticResource ModeButtonStyle}"/>

            <!-- Separator -->
            <Rectangle Width="1" Fill="{DynamicResource BorderBrush}" Margin="8,4"/>

            <!-- Current Mode Label -->
            <TextBlock x:Name="TxtCurrentMode" 
                       Text="Developer" 
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       FontSize="12"
                       Margin="4,0,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
