<Window x:Class="AppCommander.W7_11.WPF.WindowClickOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Window" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowState="Maximized"
        IsHitTestVisible="False">

    <Grid Background="Transparent">
        <!-- Crosshair cursor indicator -->
        <Canvas Name="crosshairCanvas" Visibility="Visible">
            <!-- Horizontal line -->
            <Line Name="horizontalLine" 
                  Stroke="Red" 
                  StrokeThickness="2" 
                  X1="0" Y1="0" 
                  X2="100" Y2="0"
                  Opacity="0.8"/>

            <!-- Vertical line -->
            <Line Name="verticalLine" 
                  Stroke="Red" 
                  StrokeThickness="2" 
                  X1="0" Y1="0" 
                  X2="0" Y2="100"
                  Opacity="0.8"/>

            <!-- Center dot -->
            <Ellipse Name="centerDot"
                     Fill="Red"
                     Width="8" Height="8"
                     Opacity="0.9"/>
        </Canvas>

        <!-- Information panel -->
        <Border Name="infoPanel" 
                Background="#DD000000" 
                CornerRadius="8" 
                Padding="15,10"
                Margin="20"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                MaxWidth="400">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="🎯 Select Target Window" 
                          Foreground="White" 
                          FontWeight="Bold" 
                          FontSize="16" 
                          Margin="0,0,0,10"/>

                <!-- Instructions -->
                <TextBlock Text="Click on any window to select it as target" 
                          Foreground="LightGray" 
                          FontSize="12" 
                          Margin="0,0,0,5"/>

                <TextBlock Text="Press ESC to cancel" 
                          Foreground="Orange" 
                          FontSize="11" 
                          Margin="0,0,0,10"/>

                <!-- Current window info -->
                <Separator Margin="0,5" Background="Gray"/>

                <TextBlock Text="Current hover:" 
                          Foreground="LightBlue" 
                          FontSize="11" 
                          FontWeight="SemiBold"
                          Margin="0,5,0,2"/>

                <TextBlock Name="txtCurrentProcess" 
                          Text="None" 
                          Foreground="White" 
                          FontSize="12" 
                          FontWeight="Bold"/>

                <TextBlock Name="txtCurrentTitle" 
                          Text="-" 
                          Foreground="LightGray" 
                          FontSize="11" 
                          TextWrapping="Wrap"
                          MaxWidth="350"/>

                <TextBlock Name="txtCurrentClass" 
                          Text="-" 
                          Foreground="DarkGray" 
                          FontSize="10" 
                          Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- Highlight rectangle for target window -->
        <Rectangle Name="highlightRectangle"
                   Stroke="Lime"
                   StrokeThickness="3"
                   Fill="Transparent"
                   Visibility="Collapsed"
                   IsHitTestVisible="False">
            <Rectangle.Effect>
                <DropShadowEffect Color="Lime" BlurRadius="10" ShadowDepth="0" Opacity="0.7"/>
            </Rectangle.Effect>
        </Rectangle>
    </Grid>
</Window>