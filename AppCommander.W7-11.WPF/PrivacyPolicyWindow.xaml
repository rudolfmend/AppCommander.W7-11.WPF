<Window x:Class="AppCommander.W7_11.WPF.PrivacyPolicyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Privacy Policy - Senaro" 
        Height="700" Width="850"
        MinHeight="600" MinWidth="750"
        WindowStartupLocation="CenterScreen"
        Icon="/Pictures/Senaro-logo-bright-star.ico"
        Background="{DynamicResource WindowBackgroundBrush}"
        FontFamily="Segoe UI"
        FontSize="14"
        KeyDown="Window_KeyDown">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🔒 Privacy Policy" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                       Margin="0,0,0,5"/>

            <TextBlock Text="Effective Date: January 2025" 
                       FontSize="13"
                       Foreground="{DynamicResource SecondaryTextBrush}"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>

                <!-- Introduction -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Introduction" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock TextWrapping="Wrap" 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   LineHeight="24">
                            Senaro is an application designed for automating Windows applications with advanced UI interaction capabilities and intelligent element detection. This application provides tools for recording and playback of UI interactions to automate repetitive tasks.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Data Collection -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Data Collection" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock TextWrapping="Wrap" 
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   LineHeight="24"
                                   Margin="0,0,0,15">
                            <Run FontWeight="SemiBold">Senaro does not collect, store, or share any personal data of its users.</Run>
                        </TextBlock>

                        <TextBlock TextWrapping="Wrap" 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   LineHeight="24"
                                   Margin="0,0,0,10">
                            The application:
                        </TextBlock>

                        <StackPanel Margin="20,0,0,0">
                            <TextBlock TextWrapping="Wrap" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,6">
                                • Does not record any user data
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,6">
                                • Does not track user activity
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,6">
                                • Does not collect information about the device
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,6">
                                • Does not communicate with any remote servers
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,6">
                                • Does not store any data outside the user's local device
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" 
                                       Foreground="{DynamicResource SecondaryTextBrush}">
                                • Does not use cookies or similar tracking technologies
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Data Storage -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Data Storage" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock TextWrapping="Wrap" 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   LineHeight="24"
                                   Margin="0,0,0,15">
                            Senaro stores data in local locations on your device:
                        </TextBlock>

                        <!-- Application Data Storage -->
                        <TextBlock Text="📁 Application Data Storage" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="0,0,0,10"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="File Types:" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="20,0,15,8"
                                       VerticalAlignment="Top"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,8">
                                .acc (command sequences), .acset (sets of sequences), .acproj (projects)
                            </TextBlock>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Purpose:" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="20,0,15,8"
                                       VerticalAlignment="Top"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,8">
                                Storing user-created automation sequences and configurations
                            </TextBlock>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Access:" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="20,0,15,0"
                                       VerticalAlignment="Top"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource SecondaryTextBrush}">
                                Only accessible by the Senaro application and the user account
                            </TextBlock>
                        </Grid>

                        <!-- User Export Location -->
                        <TextBlock Text="📤 User Save/Export Location" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="0,0,0,10"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Location:" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="20,0,15,8"
                                       VerticalAlignment="Top"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,8">
                                User-specified locations (typically Documents folder)
                            </TextBlock>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Purpose:" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="20,0,15,8"
                                       VerticalAlignment="Top"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,8">
                                User-initiated data backup and sharing
                            </TextBlock>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Control:" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="20,0,15,0"
                                       VerticalAlignment="Top"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource SecondaryTextBrush}">
                                User has full control over save location and timing
                            </TextBlock>
                        </Grid>

                        <Border Background="{DynamicResource PanelBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="15"
                                Margin="0,5,0,0">
                            <TextBlock TextWrapping="Wrap" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       LineHeight="22"
                                       FontStyle="Italic">
                                <Run FontWeight="SemiBold">Important Note:</Run>
                                <Run> All data storage is entirely local to your device. No data is transmitted to external servers or shared with third parties. Users maintain complete control over their data and can delete it at any time through the application interface or by removing the files directly.</Run>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- GDPR Compliance -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="0,0,0,15">
                            <Run Text="🇪🇺 GDPR Compliance (European Union)"/>
                        </TextBlock>

                        <TextBlock TextWrapping="Wrap" 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   LineHeight="24"
                                   Margin="0,0,0,10">
                            Since the application does not collect, process, or transfer any personal data as defined in the General Data Protection Regulation (GDPR) of the European Union, the application is not subject to the obligations set out in this regulation.
                        </TextBlock>

                        <TextBlock TextWrapping="Wrap" 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   FontStyle="Italic">
                            GDPR Reference: Regulation (EU) 2016/679
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Global Privacy Law Compliance -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="🌍 Global Privacy Law Compliance" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock TextWrapping="Wrap" 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   LineHeight="24"
                                   Margin="0,0,0,15">
                            Senaro application complies with major international privacy and data protection laws, including but not limited to:
                        </TextBlock>

                        <StackPanel Margin="10,0,0,15">
                            <!-- US -->
                            <TextBlock Text="🇺🇸 United States:" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="• California Consumer Privacy Act (CCPA)" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="15,0,0,3"/>
                            <TextBlock Text="• Children's Online Privacy Protection Act (COPPA)" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="15,0,0,10"/>

                            <!-- Canada -->
                            <TextBlock Text="🇨🇦 Canada:" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="• Personal Information Protection and Electronic Documents Act (PIPEDA)" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="15,0,0,3"/>
                            <TextBlock Text="• Provincial privacy laws" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="15,0,0,10"/>

                            <!-- UK -->
                            <TextBlock Text="🇬🇧 United Kingdom:" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="• UK Data Protection Act 2018" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="15,0,0,3"/>
                            <TextBlock Text="• UK GDPR" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="15,0,0,10"/>

                            <!-- Australia -->
                            <TextBlock Text="🇦🇺 Australia:" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="• Privacy Act 1988" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="15,0,0,3"/>
                            <TextBlock Text="• Australian Privacy Principles (APPs)" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="15,0,0,10"/>

                            <!-- Japan -->
                            <TextBlock Text="🇯🇵 Japan:" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="• Act on Protection of Personal Information (APPI)" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="15,0,0,10"/>

                            <!-- South Korea -->
                            <TextBlock Text="🇰🇷 South Korea:" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="• Personal Information Protection Act (PIPA)" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="15,0,0,10"/>

                            <!-- Brazil -->
                            <TextBlock Text="🇧🇷 Brazil:" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="• Lei Geral de Proteção de Dados (LGPD)" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="15,0,0,0"/>
                        </StackPanel>

                        <Border Background="{DynamicResource PanelBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="15">
                            <TextBlock TextWrapping="Wrap" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       LineHeight="22">
                                <Run FontWeight="SemiBold">Compliance Status:</Run>
                                <Run> Since Senaro does not collect, process, store, or transmit any personal identifiable information (PII), it inherently complies with all major global privacy regulations.</Run>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Personal Identifiers -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Personal Identifiers and Sensitive Data" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock TextWrapping="Wrap" 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   LineHeight="24"
                                   Margin="0,0,0,10">
                            Senaro does not collect, access, or process any of the following types of personal identifiers or sensitive data:
                        </TextBlock>

                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="• Names, addresses, phone numbers, or email addresses" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="• Social security numbers, national ID numbers, or government identifiers" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="• Financial information, credit card numbers, or banking details" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="• Biometric data, health information, or medical records" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="• Location data, GPS coordinates, or geolocation information" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="• Device identifiers, IP addresses, or hardware specifications" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="• Browsing history, usage patterns, or behavioral data" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="• Any other personally identifiable information as defined by applicable privacy laws" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Changes to Privacy Policy -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Changes to Privacy Policy" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock TextWrapping="Wrap" 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   LineHeight="24"
                                   Margin="0,0,0,10">
                            If there are future changes to the application's functionality that could affect the processing of personal data, this policy will be updated and users will be informed of the changes through:
                        </TextBlock>

                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="• Application update notifications" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="• Updates to this privacy policy page" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Contact Information -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Contact" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   Margin="0,0,0,15"/>

                        <TextBlock TextWrapping="Wrap" 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   LineHeight="24"
                                   Margin="0,0,0,15">
                            If you have any questions regarding this privacy policy or data protection practices, you can contact us at:
                        </TextBlock>

                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,5">
                                <Run FontWeight="SemiBold">Email:</Run>
                                <Run> rudolf.mend@gmail.com</Run>
                            </TextBlock>
                            <TextBlock Foreground="{DynamicResource SecondaryTextBrush}">
                                <Run FontWeight="SemiBold">Subject Line:</Run>
                                <Run> Senaro - Privacy Policy Inquiry</Run>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Margin="0,20,0,0"
                Padding="0,15,0,0"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource BorderBrush}">
            <Grid>
                <StackPanel Orientation="Vertical" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left">
                    <TextBlock Text="© 2025 Rudolf Mendzezof. All rights reserved." 
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,0,3"/>
                    <TextBlock Text="Last updated: January 2025" 
                               FontSize="11"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               FontStyle="Italic"/>
                </StackPanel>

                <Button Content="Close" 
                        Width="160" 
                        HorizontalAlignment="Right"
                        Click="CloseButton_Click"
                        Style="{DynamicResource DangerButton}"/>
            </Grid>
        </Border>
    </Grid>
</Window>