<Window x:Class="AppCommander.W7_11.WPF.EditCommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppCommander.W7_11.WPF"
        mc:Ignorable="d"
        Title="Command details" Height="550" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Hlavička -->
        <Border Grid.Row="0" 
                Background="{DynamicResource OnSurface}" 
                Padding="15,10" 
                Margin="-20,-20,-20,15"
                CornerRadius="0">
            <StackPanel>
                <TextBlock x:Name="txtTitle" 
                          Text="Viewing and editing a command"
                          Style="{DynamicResource TextBlockStyle}"/>

            </StackPanel>
        </Border>
        
        <!-- Obsah -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Základné informácie -->
                <GroupBox Header="📋 Basic information" 
                          Style="{DynamicResource GroupBoxStyle}"
                          Padding="10,20,10,25" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Step no.:" Style="{DynamicResource TextBlockStyle}"/>
                        <TextBlock x:Name="txtStepNumber" Grid.Row="0" Grid.Column="1" Style="{DynamicResource TextBlockStyle}"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" Style="{DynamicResource TextBlockStyle}"/>
                        <TextBlock x:Name="txtType" Grid.Row="1" Grid.Column="1" Style="{DynamicResource TextBlockStyle}"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Name:" Style="{DynamicResource TextBlockStyle}"/>
                        <TextBox x:Name="txtName" 
                                Grid.Row="2" Grid.Column="1" 
                                Style="{DynamicResource TextBoxStyle}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Operation:" Style="{DynamicResource TextBlockStyle}"/>
                        <TextBlock x:Name="txtAction" Grid.Row="3" Grid.Column="1" Style="{DynamicResource TextBlockStyle}"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Value:" Style="{DynamicResource TextBlockStyle}"/>
                        <TextBox x:Name="txtValue" 
                                Grid.Row="4" Grid.Column="1" 
                                Style="{DynamicResource TextBoxStyle}"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </GroupBox>
                
                <!-- Detaily elementu -->
                <GroupBox x:Name="grpElementDetails"
                          Style="{DynamicResource GroupBoxStyle}"
                          Header="🎯 UI Element details" 
                          Padding="10,20,10,25" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Position X:" Style="{DynamicResource TextBlockStyle}"
                                   Margin="0,12,10,10"/>
                        <TextBlock x:Name="txtElementX" Grid.Row="0" Grid.Column="1" Style="{DynamicResource TextBlockStyle}"
                                   Margin="0,12,10,10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Position Y:" Style="{DynamicResource TextBlockStyle}"
                                   Margin="0,12,10,10"/>
                        <TextBlock x:Name="txtElementY" Grid.Row="1" Grid.Column="1" Style="{DynamicResource TextBlockStyle}"
                                   Margin="0,12,10,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Element ID:" Style="{DynamicResource TextBlockStyle}"
                                   Margin="0,12,10,10"/>
                        <TextBlock x:Name="txtElementId" Grid.Row="2" Grid.Column="1" Style="{DynamicResource TextBlockStyle}"
                                   Margin="0,12,10,10"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Class:" Style="{DynamicResource TextBlockStyle}"
                                   Margin="0,12,10,5"/>
                        <TextBlock x:Name="txtClassName" Grid.Row="3" Grid.Column="1" Style="{DynamicResource TextBlockStyle}"
                                   Margin="0,12,10,5"/>
                    </Grid>
                </GroupBox>
                
                <!-- Nastavenia vykonávania -->
                <GroupBox Header="⚙️ Execution settings" 
                          Style="{DynamicResource GroupBoxStyle}"
                          Padding="10,20,10,25" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Number of " Style="{DynamicResource TextBlockStyle}"
                                   Padding="0,0,10,5" />
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="repetitions:" Style="{DynamicResource TextBlockStyle}"
                                   Padding="0,15,10,5" />
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal"
                                    Margin="0">
                            <TextBox x:Name="txtRepeatCount" 
                                    Width="100" 
                                    Style="{DynamicResource TextBoxStyle}"
                                    Margin="0,0,10,10"/>
                            <TextBlock Text="× (1 = to do once)" 
                                       Style="{DynamicResource TextBlockStyle}"
                                       VerticalAlignment="Center"
                                       Foreground="#999999"
                                       Margin="0,0,0,10"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Status:" Style="{DynamicResource TextBlockStyle}"
                                   Margin="0,12,10,15"/>
                        <TextBlock x:Name="txtStatus" Grid.Row="1" Grid.Column="1" Style="{DynamicResource TextBlockStyle}"
                                   Margin="0,12,10,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Created:" Style="{DynamicResource TextBlockStyle}"/>
                        <TextBlock x:Name="txtTimestamp" Grid.Row="2" Grid.Column="1" Style="{DynamicResource TextBlockStyle}"/>
                    </Grid>
                </GroupBox>
                
                <!-- Cesta k súboru (pre sekvencie) -->
                <GroupBox x:Name="grpFilePath"
                         Header="📁 Sequence reference link" 
                         Visibility="Visible" Style="{DynamicResource GroupBoxStyle}"
                          Padding="10,20,10,25" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="File path:" Style="{DynamicResource TextBlockStyle}"/>
                        <TextBlock x:Name="txtFilePath" 
                                  Grid.Row="0" Grid.Column="1" 
                                  Style="{DynamicResource TextBlockStyle}"
                                  TextWrapping="Wrap"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Tlačidlá -->
        <Border Grid.Row="2" 
                BorderThickness="0,1,0,0" 
                BorderBrush="#D1D1D1"
                Padding="0,3,0,0"
                Margin="-20, -18"
                Background="{DynamicResource CardBackgroundBrush}">
            
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       Margin="20,15">
                <Button x:Name="ButtonSaveCommands" 
                        Content="💾 Save changes" 
                        MinWidth="100" MaxWidth="180" 
                        MinHeight="50" MaxHeight="70"
                        Margin="0,0,10,0"
                        Click="ButtonSaveCommands_Click"
                        IsDefault="True"
                        Style="{DynamicResource PrimaryButton}"/>

                    <Button x:Name="ButtonCancelEdit" 
                            Content="❌ Cancel"  
                            MinWidth="100" MaxWidth="130" 
                            MinHeight="50" MaxHeight="70"
                            Click="ButtonCancelEdit_Click"
                            IsCancel="True"
                            Style="{DynamicResource DangerButton}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
    