<Window x:Class="AppCommander.W7_11.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AppCommander - Automation Tool" 
        Height="800" Width="1200" 
        MinHeight="500" MinWidth="960"
        Icon="appcommander_icon.ico"
        WindowStartupLocation="CenterScreen" FontSize="18" FontFamily="MS Reference Sans Serif">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Style="{StaticResource MenuStyle}"  Grid.Row="0" Background="#FFF3F2F1">
            <MenuItem Header="_File" Style="{StaticResource TopLevelMenuItem}">
                <MenuItem Header="_New Sequence" Click="NewSequence_Click" Style="{StaticResource ModernMenuItem}" InputGestureText="Ctrl+N"/>
                <MenuItem Header="_Open Sequence..." Click="OpenSequence_Click" Style="{StaticResource ModernMenuItem}" InputGestureText="Ctrl+O"/>
                <Separator/>
                <MenuItem Header="_Save Sequence" Click="SaveSequence_Click" Style="{StaticResource ModernMenuItem}" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save Sequence _As..." Click="SaveSequenceAs_Click" Style="{StaticResource ModernMenuItem}" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click" Style="{StaticResource ModernMenuItem}" InputGestureText="Alt+F4"/>
            </MenuItem>

            <MenuItem Header="_Commands" Style="{StaticResource TopLevelMenuItem}">
                <MenuItem Header="Add _Wait Command..." Style="{StaticResource ModernMenuItem}" Click="AddWaitCommand_Click"/>
                <MenuItem Header="Add _Loop Start"  Style="{StaticResource ModernMenuItem}" Click="AddLoopStart_Click"/>
                <MenuItem Header="Add Loop _End" Style="{StaticResource ModernMenuItem}"  Click="AddLoopEnd_Click"/>
                <Separator/>
                <MenuItem Header="_Edit Selected Command..." Style="{StaticResource ModernMenuItem}"  Click="EditCommand_Click"/>
                <MenuItem Header="_Delete Selected Command"  Style="{StaticResource ModernMenuItem}" Click="DeleteCommand_Click"/>
                <Separator/>
                <MenuItem Header="_Clear Log"  Style="{StaticResource ModernMenuItem}" Click="ClearLog_Click"/>
            </MenuItem>

            <MenuItem Header="_Tools" Style="{StaticResource TopLevelMenuItem}" >
                <MenuItem Header="_Window Selector"  Style="{StaticResource ModernMenuItem}" Click="WindowSelector_Click"/>
                <MenuItem Header="_Element Inspector"  Style="{StaticResource ModernMenuItem}" Click="ElementInspector_Click"/>
                <Separator/>
                <MenuItem Header="_Test Playback"  Style="{StaticResource ModernMenuItem}" Click="TestPlayback_Click"/>
                <MenuItem Header="_Debug Coordinates" Style="{StaticResource ModernMenuItem}"  Click="DebugCoordinates_Click"/>
                <MenuItem Header="_Settings"  Style="{StaticResource ModernMenuItem}" Click="Settings_Click"/>
            </MenuItem>

            <MenuItem Header="_Debug" Style="{StaticResource TopLevelMenuItem}">
                <MenuItem Header="_Export Auto-Detected Data..." Style="{StaticResource ModernMenuItem}"  Click="ExportAutoDetectedData_Click"/>
                <MenuItem Header="_Export Debug Info"  Style="{StaticResource ModernMenuItem}" Click="ExportSequenceForDebug_Click"/>
                <MenuItem Header="_Play Direct (No Search)" Style="{StaticResource ModernMenuItem}"  Click="PlayWithoutElementSearch_Click"/>
            </MenuItem>

            <MenuItem Header="_Help" Style="{StaticResource TopLevelMenuItem}">
                <MenuItem Header="_User Guide"  Style="{StaticResource ModernMenuItem}" Click="UserGuide_Click"/>
                <MenuItem Header="_About" Style="{StaticResource ModernMenuItem}"  Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Control Panel -->
        <StackPanel Grid.Row="1" Margin="5">
            <GroupBox Header="Control Panel" Style="{StaticResource GroupBoxStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="450"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Recording Controls -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                        <!-- Target Selection Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                            <Button Name="btnSelectTargetByClick" Content="👆 Click to Select" 
                                    Style="{StaticResource PrimaryButton}" 
                                    Click="SelectTargetByClick_Click" 
                                    Margin="0,0,5,0"
                                    ToolTip="Click to select target window by clicking on it"/>
                            <Button Name="btnSelectTarget" Content="📋 Select from List" 
                                    Style="{StaticResource SecondaryButton}" 
                                    Click="SelectTarget_Click" 
                                    Margin="0,0,10,0"
                                    ToolTip="Select target window from a list"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Repeat Logic Panel -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Repeat Settings" FontWeight="Bold" HorizontalAlignment="Center" FontSize="10" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Count:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="10"/>
                            <TextBox Name="txtRepeatCount" Style="{StaticResource TextBoxStyle}" Text="1" Width="40" Height="20" 
                                     VerticalAlignment="Center" HorizontalContentAlignment="Center"
                                     ToolTip="Number of times to repeat the sequence (1-999)"/>
                            <CheckBox Name="chkInfiniteLoop" Content="∞" VerticalAlignment="Center" Style="{StaticResource CheckBoxStyle}"
                                      Margin="5,0,0,0" ToolTip="Infinite loop (Ctrl+Stop to break)"
                                      Checked="InfiniteLoop_Checked" Unchecked="InfiniteLoop_Unchecked"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Playback Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Name="btnPlay" Content="▶ Play" 
                                Style="{StaticResource PrimaryButton}" 
                                Click="PlaySequence_Click" Margin="0,0,10,0"/>
                        <Button Name="btnPause" Content="|| Pause" 
                                Style="{StaticResource SecondaryButton}" 
                                Click="PausePlayback_Click" Margin="0,0,10,0" IsEnabled="False"/>
                        <Button Name="btnStop" Content="■ Stop" 
                                Style="{StaticResource SecondaryButton}" 
                                Click="StopPlayback_Click" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </StackPanel>

        <!-- Enhanced Recording Panel -->
        <StackPanel Grid.Row="2" Margin="5">
            <GroupBox Header="Enhanced Recording &amp; Auto-Detection" Style="{StaticResource GroupBoxStyle}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Sequence Name:" VerticalAlignment="Center"  Style="{StaticResource TextBlockStyle}"
                                   FontWeight="Bold" Width="100" />
                        <TextBox Name="txtSequenceName" Style="{StaticResource TextBoxStyle}" Width="250" Height="25" 
                                 Text="My_Recording" VerticalAlignment="Center" 
                                 ToolTip="Enter name for the recording sequence"/>
                        
                        
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="336"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Enhanced Controls -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">


                            <!-- Recording Controls -->
                            <Button Name="btnStartRecording" Content="🔴 Start Recording" 
                                Style="{StaticResource PrimaryButton}" 
                                Click="StartRecording_Click" Margin="0,0,10,0"/>
                            <!--<Button Name="btnStopRecording" Content="⏹ Stop Recording" 
                                Style="{StaticResource DangerButton}" 
                                Click="StopRecording_Click" Margin="0,0,10,0"/>
                            <Button Name="btnPauseRecording" Content="⏸ Pause Recording" 
                                Style="{StaticResource SecondaryButton}" 
                                Click="PauseRecording_Click" Margin="0,0,10,0"/>-->
                            <Button Name="btnPlayCommands" Content="▶ Play" 
                                Style="{StaticResource PrimaryButton}" 
                                Click="PlaySequence_Click" Margin="0,0,10,0"/>
                            
                            <Button Name="btnStartEnhancedRecording" Content="Enhanced Record." 
                                    Click="StartEnhancedRecordingWithAutoDetection_Click" 
                                    Style="{StaticResource PrimaryButton}" Margin="0,0,5,0"/>
                            <Button x:Name="btnAutoRefreshElements" Content="↻ Refresh UI" 
                                    Click="AutoRefreshAllUIElements_Click" 
                                    Style="{StaticResource SecondaryButton}" Margin="0,0,0,0"/>
                        </StackPanel>

                        <!-- Auto Mode Controls -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Name="btnToggleAutoMode" Content="🎯 Auto Mode" 
                                    Click="ToggleAutomaticMode_Click" 
                                    Style="{StaticResource SecondaryButton}" Margin="0,0,5,0"/>
                            <Button Name="btnShowSystemStatus" Content="≡ Status" 
                                    Click="ShowAutomaticSystemStatus_Click" 
                                    Style="{StaticResource SecondaryButton}"/>
                        </StackPanel>

                        <!-- Status Indicators -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                            <Label Name="lblAutoDetectionStatus" Content="🔴 Auto-Detection Inactive" 
                                   Style="{StaticResource LabelStyle}"/>
                            <Label Name="lblUIRecordingStatus" Content="🔴 UI Scanning Inactive" 
                                   Style="{StaticResource LabelStyle}"/>
                        </StackPanel>
                    </Grid>

                    <ProgressBar Name="progressEnhancedRecording" Height="4" 
                                 IsIndeterminate="False" Visibility="Collapsed" Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Row="3" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Commands Panel -->
            <GroupBox Grid.Column="0" Header="Recorded Commands" Style="{StaticResource GroupBoxStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Commands DataGrid -->
                    <DataGrid Name="dgCommands" Grid.Row="0" AutoGenerateColumns="False" 
                              GridLinesVisibility="Horizontal" AlternatingRowBackground="#FFF8F8F8"
                              HeadersVisibility="Column" CanUserSortColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding StepNumber}" Width="40" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Element" Binding="{Binding ElementName}" Width="120" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Action" Binding="{Binding Type}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="100" IsReadOnly="True"/>
                            <DataGridTextColumn Header="X" Binding="{Binding ElementX}" Width="50" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Y" Binding="{Binding ElementY}" Width="50" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Target" Binding="{Binding TargetProcess}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat='HH:mm:ss'}" Width="70" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Commands Toolbar -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                        <Button Content="📝 Edit" Click="EditCommand_Click" 
                                Style="{StaticResource SecondaryButton}" Margin="0,0,5,0"/>
                        <Button Content="X Delete" Click="DeleteCommand_Click" 
                                Style="{StaticResource DangerButton}" Margin="0,0,5,0"/>
                        <Button Content="▶ Test" Click="TestPlayback_Click" 
                                Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                        <TextBlock Text="|" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="Gray"/>
                        <TextBlock Name="txtCommandCount" Text="0 commands" VerticalAlignment="Center" FontSize="10" Foreground="Gray"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#FFCCCCCC"/>

            <!-- Side Panel -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

                <StackPanel Grid.Column="2" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical">
                    <!-- Target Information -->
                    <GroupBox Header="Target Information" Style="{StaticResource GroupBoxStyle}">
                        <StackPanel>
                            <!-- Selection Mode Indicator -->
                            <Border Name="selectionModeIndicator" 
                                    Background="#FFF3E5" 
                                    BorderBrush="Orange" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Padding="8,4" 
                                    Margin="0,0,0,8"
                                    Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🎯" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Name="txtSelectionMode" 
                                               Text="Click Selection Mode Active" 
                                               FontWeight="SemiBold" 
                                               Foreground="DarkOrange"/>
                                </StackPanel>
                            </Border>

                            <!-- Existing Target Information -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Window:" FontWeight="Bold" Width="60" FontSize="10"/>
                                <Label Name="lblTargetWindow" Content="No target selected" 
                                       FontSize="10" Foreground="Gray" Padding="0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Process:" FontWeight="Bold" Width="60" FontSize="10"/>
                                <TextBox Name="txtTargetProcess" Text="" 
                                         FontSize="10" Foreground="Gray" Background="Transparent" 
                                         BorderThickness="0" IsReadOnly="True"/>
                            </StackPanel>

                            <!-- Quick Action Buttons -->
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <Button Content="🔄 Reselect" Click="SelectTargetByClick_Click" 
                                        Style="{StaticResource SecondaryButton}" 
                                        FontSize="10" Padding="8,4" Margin="0,0,5,0"
                                        ToolTip="Quickly reselect target using click selection"/>
                                <Button Content="📋 Browse" Click="SelectTarget_Click" 
                                        Style="{StaticResource SecondaryButton}" 
                                        FontSize="10" Padding="8,4"
                                        ToolTip="Browse all available windows"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Element Statistics -->
                    <GroupBox Header="Element Statistics" Style="{StaticResource GroupBoxStyle}">
                        <StackPanel>
                            <ListBox Name="lstElementStats" Height="150" FontSize="10">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding ElementName}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding UsageCount, StringFormat='Used: {0} times'}" FontSize="9" Foreground="Gray"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Button Content="↻ Refresh Stats" Click="AutoRefreshAllUIElements_Click" 
                                    Style="{StaticResource SecondaryButton}" 
                                    HorizontalAlignment="Stretch" Margin="0,5,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Quick Actions -->
                    <GroupBox Header="Quick Actions" Style="{StaticResource GroupBoxStyle}">
                        <StackPanel>
                            <Button Content="🔍 Element Inspector" Click="ElementInspector_Click" 
                                    Style="{StaticResource SecondaryButton}" 
                                    HorizontalAlignment="Stretch" Margin="0,0,0,5"/>
                            <Button Content="🏃 Play Direct" Click="PlayWithoutElementSearch_Click" 
                                    Style="{StaticResource SecondaryButton}" 
                                    HorizontalAlignment="Stretch" Margin="0,0,0,5"/>
                            <Button Content="📊 Debug Info" Click="ExportSequenceForDebug_Click" 
                                    Style="{StaticResource SecondaryButton}" 
                                    HorizontalAlignment="Stretch" Margin="0,0,0,5"/>
                            <Button Content="⚙ Settings" Click="Settings_Click" 
                                    Style="{StaticResource SecondaryButton}" 
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

        </Grid>

        <!-- Execution Speed Control Panel -->
        <GroupBox Grid.Row="4" Header="Execution Speed Control" Style="{StaticResource GroupBoxStyle}" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Speed control will be available when implemented" 
                           Grid.Column="0" VerticalAlignment="Center" FontStyle="Italic" Foreground="Gray"/>

                <TextBlock Name="txtExecutionSpeedInfo" Text="Normal Speed" 
                           Grid.Column="1" VerticalAlignment="Center" Margin="10,0"/>

                <Button Name="btnSpeedSettings" Content="⚙ Speed Settings" 
                        Grid.Column="2" Style="{StaticResource SecondaryButton}"
                        Margin="5,0,0,0"/>
            </Grid>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="5" Background="#FFF3F2F1" Height="30">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Column="0">
                <TextBlock Name="txtStatusBar" Text="Ready" FontWeight="Bold" 
                           Foreground="#FF0078D4" FontSize="12"/>
            </StatusBarItem>

            <Separator Grid.Column="1"/>

            <StatusBarItem Grid.Column="2">
                <TextBlock Name="txtTarget" Text="No target selected" 
                           FontSize="10" Foreground="Gray"/>
            </StatusBarItem>

            <StatusBarItem Grid.Column="3">
                <TextBlock Name="txtSequenceInfo" Text="Ready to record" 
                           FontSize="10" Foreground="Gray"/>
            </StatusBarItem>

            <StatusBarItem Grid.Column="4">
                <TextBlock Name="lblStatusBarRecording" Text="Not Recording" 
                           FontSize="10" Foreground="Gray"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>